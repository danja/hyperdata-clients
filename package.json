{
  "name": "hyperdata-clients",
  "version": "0.11.0",
  "type": "module",
  "vitest": {
    "environment": "node",
    "coverage": {
      "provider": "v8",
      "reporter": [
        "text",
        "json",
        "html"
      ]
    }
  },
  "description": "Unified client library for multiple AI providers",
  "main": "src/index.js",
  "types": "types/clients.d.ts",
  "files": [
    "src/**/*.js",
    "types/**/*.d.ts"
  ],
  "exports": {
    ".": "./src/index.js",
    "./package.json": "./package.json"
  },
  "keywords": [
    "ai",
    "api",
    "client",
    "llm",
    "openai",
    "mistral",
    "claude",
    "groq",
    "huggingface",
    "ollama"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/danja/hyperdata-clients.git"
  },
  "author": "Danny Ayers <danny.ayers@gmail.com> (https://danny.ayers.name)",
  "license": "MIT",
  "homepage": "https://github.com/danja/hyperdata-clients#readme",
  "bugs": {
    "url": "https://github.com/danja/hyperdata-clients/issues"
  },
  "scripts": {
    "test": "vitest --run",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "docs": "mkdir -p docs/jsdoc && jsdoc -c jsdoc.json",
    "rp": "repomix -c repomix.config.json .",
    "ask": "node examples/minimal.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.2",
    "@huggingface/inference": "^2.6.4",
    "@mistralai/mistralai": "^1.5.2",
    "dotenv": "^16.4.1",
    "groq-sdk": "^0.3.0",
    "ollama": "^0.4.4",
    "openai": "^4.28.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "c8": "^9.1.0",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "docdash": "^2.0.2",
    "jsdoc": "^4.0.4",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}